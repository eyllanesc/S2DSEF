import serial, sys
import time
# main() function
def main():
  # open serial port
  ser = serial.Serial("/dev/rfcomm0", 9600)
  ser2 = serial.Serial("/dev/rfcomm1",9600)
  while True:
    ser.write('0')
    while (ser.inWaiting()==0): #Wait here until there is data
        pass #do nothing
    line = ser.readline()
    line = line.replace("\n","")
    print '0: '+line
    time.sleep(0.01)
    ser2.write('0')
    line = ""
    while (ser2.inWaiting()==0): #Wait here until there is data
        pass #do nothing
    line = ser2.readline()
    line = line.replace("\n","")
    print '1: '+line
    time.sleep(0.01)
  ser.flush()
  ser.close()

# call main
if __name__ == '__main__':
  main()
